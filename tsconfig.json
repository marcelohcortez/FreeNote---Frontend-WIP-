{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "api/*": ["api/*"],
      "components/*": ["components/*"],
      "context/*": ["context/*"],
      "images/*": ["images/*"],
      "hooks/*": ["hooks/*"],
      "layout/*": ["layout/*"],
      "router/*": ["router/*"],
      "styles/*": ["styles/*"],
      "types/*": ["types/*"],
      "validations/*": ["validations/*"],
      "views/*": ["views/*"],
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "webworker", "es2016"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
  },
  "exclude": ["node_modules"],
  "include": ["src", "typings.d.ts", "src/images"],
}
